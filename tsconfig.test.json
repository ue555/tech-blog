{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": [
      "esnext",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "jest",
      "@testing-library/jest-dom"
    ],
    "composite": true,
    "noEmit": true
